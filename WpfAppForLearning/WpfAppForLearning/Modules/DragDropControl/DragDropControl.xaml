<UserControl x:Class="WpfAppForLearning.Modules.DragDropControl.DragDropControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppForLearning.Modules.DragDropControl"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
	<UserControl.DataContext>
		<local:DragDropControlViewModel/>
	</UserControl.DataContext>
    <Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition/>
		</Grid.RowDefinitions>
		<Label Name="WatermarkTextBox"
			   AllowDrop="True"
			   BorderBrush="Gray"
			   BorderThickness="1"
			   Content="ファイルをD&amp;Dで登録してください。"
			   Foreground="Gray"/>
		<GroupBox Grid.Row="1" Header="説明">
			<TextBlock Text="{Binding Description}" TextWrapping="Wrap"/>
		</GroupBox>
	</Grid>
</UserControl>
