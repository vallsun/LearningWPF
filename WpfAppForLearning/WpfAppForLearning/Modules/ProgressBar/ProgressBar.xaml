<UserControl x:Class="WpfAppForLearning.Modules.ProgressBar.ProgressBar"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfAppForLearning.Modules.ProgressBar"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
		<StackPanel Margin="10">
			<Label Content="■最小=0、最大=100、Value=50" />
			<ProgressBar Height="20" Minimum="0" Maximum="100" Value="50" IsIndeterminate="False" />
			<Label Content="■IsIndeterminate=True" />
			<ProgressBar Height="20" IsIndeterminate="True" />
			<Label Content="■進捗をVMとバインド" />
			<ProgressBar Height="20" Value="{Binding CurrentValue}" />
			<StackPanel Orientation="Horizontal">
				<Button Content="タスク開始" Command="{Binding StartTaskCommand}"/>
				<Button Content="タスク中止" Command="{Binding CancelTaskCommand}"/>
			</StackPanel>
		</StackPanel>
	</Grid>
</UserControl>
