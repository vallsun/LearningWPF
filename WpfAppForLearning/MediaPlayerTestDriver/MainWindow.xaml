<Window x:Class="MediaPlayerTestDriver.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MediaPlayerTestDriver"
		xmlns:localVm="clr-namespace:MediaPlayerTestDriver.ViewModel"
		xmlns:mediaPlayerView="clr-namespace:WPFAppFrameWork.SoundPlayer.View;assembly=WPFAppFrameWork"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
	<Window.DataContext>
		<localVm:MainViewModel />
	</Window.DataContext>
	<Grid>
		<mediaPlayerView:SounPlayerControl DataContext="{Binding Path=SoundPlayerViewModel}"/>
	</Grid>
</Window>
