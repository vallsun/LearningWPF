<UserControl x:Class="WPFAppFrameWork.XamlPad.XamlPad"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFAppFrameWork.XamlPad"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 Loaded="UserControl_Loaded">
	<Grid Margin="10">
		<Grid.RowDefinitions>
			<RowDefinition />
			<RowDefinition Height="30"/>
			<RowDefinition Height="100"/>
		</Grid.RowDefinitions>
		<ScrollViewer Grid.Row="0">
			<Grid>
				<TextBox Name="inputXmlTextBox" TextWrapping="WrapWithOverflow" AcceptsReturn="True" AcceptsTab="True" AutoWordSelection="True" />
			</Grid>
		</ScrollViewer>
		<Button Grid.Row="1" Margin="0,5,0,0" Click="ShowWindow">Run</Button>
		<ScrollViewer Grid.Row="2" Margin="0,5,0,0">
			<Grid>
				<TextBlock Name="errorTextBlock" Background="Black" Foreground="White" TextTrimming="WordEllipsis" TextWrapping="WrapWithOverflow" />
			</Grid>
		</ScrollViewer>
	</Grid>
</UserControl>
