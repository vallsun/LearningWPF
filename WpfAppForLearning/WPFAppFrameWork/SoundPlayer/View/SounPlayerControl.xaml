<UserControl x:Class="WPFAppFrameWork.SoundPlayer.View.SounPlayerControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WPFAppFrameWork.SoundPlayer.View"
			 xmlns:localVm="clr-namespace:WPFAppFrameWork.SoundPlayer.ViewModel"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800"
			 Loaded="UserControl_Loaded">
	<Grid>
		<Grid.RowDefinitions>
			<RowDefinition/>
			<RowDefinition Height="Auto"/>
			<RowDefinition Height="Auto"/>
		</Grid.RowDefinitions>
		<MediaElement Name="m_MediaElement" Source="{Binding Path=SoundSource}" LoadedBehavior="Manual"/>
		<Slider Grid.Row="1"/>
		<StackPanel Grid.Row="2" Orientation="Horizontal">
			<Button Content="Play" Command="{Binding Path=PlayCommand}"/>
			<Button Content="Pause" Command="{Binding Path=PauseCommand}"/>
			<Button Content="Stop" Command="{Binding Path=StopCommand}"/>
			<ToggleButton Content="Repeat" IsEnabled="False"/>
		</StackPanel>
	</Grid>
</UserControl>
